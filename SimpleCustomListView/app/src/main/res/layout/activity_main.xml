<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pembe"
    android:padding="20dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="95dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/ic_profile" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@id/imageview"
        android:gravity="center_vertical"
        android:text="Adınız Soyadınız"
        android:id="@+id/et_adsoyad"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parola"
        android:id="@+id/et_parola"
        android:layout_below="@id/et_adsoyad"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List View"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/mavi"
        android:layout_below="@id/et_parola"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_listview"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yönlendirme"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/mavi"
        android:layout_below="@id/btn_listview"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_yonlendir"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_yonlendir"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="ZELİHA BOZANLI"
        android:textColor="@color/mavi"
        android:textStyle="italic" />


</RelativeLayout>


